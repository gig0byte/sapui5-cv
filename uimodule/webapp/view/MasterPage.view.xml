<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="cv.cv.controller.MasterPage">
    <Page
        backgroundDesign="Solid"
        showHeader="false"
        class="blue-background">
        <layout:VerticalLayout width="100%">
            <HBox
                alignContent="Center"
                justifyContent="Center"
                class="sapUiSmallMarginTop">
                <Image
                    src="{/img/photo}"
                    press="onPress"
                    height="200px" />
            </HBox>

            <VBox class="sapUiSmallMargin">
                <FlexBox
                    alignContent="Center"
                    justifyContent="Center">
                    <Title
                        text="Contacts"
                        class="white-text" />
                </FlexBox>

                <VBox
                    items="{/contacts}"
                    fitContainer="true"
                    class="sapUiTinyMarginBottom">
                    <HBox>
                        <core:Icon
                            visible="{= ${icon} !== undefined }"
                            src="{= ${icon} !== undefined ? 'sap-icon://' + ${icon} : ''}"
                            color="#e4e4e4"
                            class="sapUiSmallMarginEnd" />

                        <Link
                            visible="{= !!${link} }"
                            text="{value}"
                            href="{link}"
                            class="white-text" />

                        <Text
                            visible="{= !${link} }"
                            text="{value}"
                            class="white-text" />
                    </HBox>
                </VBox>

                <VBox items="{path: '/assets', templateShareable:true}">
                    <VBox class="sapUiTinyMarginTop">
                        <FlexBox
                            alignContent="Center"
                            justifyContent="Center">
                            <Title
                                text="{
								    parts: [{
								            value: 'Master.Subtitle.'
								        }, {
								            path: 'name'
								        }
								    ],
								    formatter: '.formatter.i18nDynamicKey'
								}"
                                level="H2"
                                class="white-text" />
                        </FlexBox>

                        <VBox
                            items="{ path: 'items',  templateShareable:true}"
                            class="sapUiTinyMarginTopBottom">
                            <VBox class="sapUiTinyMarginBottom">
                                <Text
                                    text="{name}"
                                    class="white-text" />

                                <ProgressIndicator
                                    class="gold-indicator"
                                    percentValue="{value}"
                                    showValue="true"
                                    displayOnly="true" />
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </layout:VerticalLayout>
    </Page>
</mvc:View>