<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="cv.cv.controller.MasterPage">
    <Page
        backgroundDesign="Solid"
        showHeader="false"
        showFooter="true"
        class="blue-background">
        <layout:VerticalLayout width="100%">
            <HBox
                alignContent="Center"
                justifyContent="Center"
                class="sapUiSmallMarginTop">
                <Image
                    densityAware="false"
                    src="{data>/photo}"
                    height="150px">
                    <detailBox>
                        <LightBox>
                            <LightBoxItem imageSrc="{data>/photo}" />
                        </LightBox>
                    </detailBox>
                </Image>
            </HBox>

            <VBox class="sapUiSmallMargin">
                <FlexBox
                    alignContent="Center"
                    justifyContent="Center">
                    <Title
                        text="Contacts"
                        class="white-text" />
                </FlexBox>

                <VBox
                    items="{data>/contacts}"
                    fitContainer="true"
                    class="sapUiTinyMarginBottom">
                    <HBox>
                        <core:Icon
                            visible="{= ${data>ui5Icon} !== undefined }"
                            src="{= ${data>ui5Icon} !== undefined ? 'sap-icon://' + ${data>ui5Icon} : 'decline'}"
                            color="#e4e4e4"
                            class="sapUiSmallMarginEnd" />

                        <Link
                            visible="{= !!${data>href} }"
                            text="{data>title}"
                            href="{data>href}"
                            class="white-text" />

                        <Text
                            visible="{= !${data>href} }"
                            text="{data>title}"
                            class="white-text" />
                    </HBox>
                </VBox>

                <VBox items="{path: 'data>/assets', templateShareable:true}">
                    <VBox class="sapUiTinyMarginTop">
                        <FlexBox justifyContent="Center">
                            <Title
                                text="{data>name}"
                                level="H2"
                                class="white-text" />
                        </FlexBox>

                        <VBox items="{ path: 'data>items',  templateShareable:true}">
                            <VBox class="sapUiTinyMarginBottom">
                                <Text
                                    text="{data>name}"
                                    class="white-text" />

                                <ProgressIndicator
                                    class="gold-indicator"
                                    percentValue="{data>value}"
                                    showValue="true"
                                    displayOnly="true" />
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </layout:VerticalLayout>

        <footer>
            <OverflowToolbar
                style="Standard"
                class="blue-background">

                <Link
                    text="Source of page"
                    href="{data>/sources/sapui5}"
                    target="_blank"
                    class="white-text sapUiSmallMarginBegin" />

                <ToolbarSpacer />

                <Link
                    text="Vue version"
                    href="/vue"
                    target="_blank"
                    class="white-text sapUiSmallMarginBegin" />

                <ToolbarSpacer visible="{= ${device>/system/phone}}"/>

                <Button
                    visible="{device>/system/phone}"
                    type="Ghost"
                    text="Show More"
                    class="white-text"
                    press="pressShowDetal" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>