<mvc:View
    xmlns:commons="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="cv.cv.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mpn="cv.cv.controls">
    <Page showHeader="false">
        <content>
            <f:FlexibleColumnLayout
                layout="{layout>/layout}"
                autoFocus="false">
                <f:beginColumnPages>
                    <mvc:XMLView viewName="cv.cv.view.MasterPage" />
                </f:beginColumnPages>

                <f:midColumnPages>
                    <mvc:XMLView viewName="cv.cv.view.DetailPage" />
                </f:midColumnPages>
            </f:FlexibleColumnLayout>
        </content>
    </Page>
</mvc:View>