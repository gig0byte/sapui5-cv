<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
    xmlns:mpn="cv.cv.controls"
    controllerName="cv.cv.controller.DetailPage">
    <Page showHeader="false">
        <layout:VerticalLayout
            width="100%"
            class="sapUiLargeMarginBegin sapUiLargeMarginEnd">
            <OverflowToolbar
                width="100%"
                height="auto"
                class="sapUiSmallMarginTop">
                <VBox>
                    <Title text="{i18n>name}" />

                    <Title
                        text="{i18n>position}"
                        titleStyle="H3"
                        class="sapUiTinyMarginTopBottom grey-text" />
                </VBox>
            </OverflowToolbar>

            <OverflowToolbar
                width="100%"
                height="50px">
                <Title text="{i18n>slogan}" />
            </OverflowToolbar>

            <OverflowToolbar
                width="100%"
                height="auto"
                class="sapUiSmallMarginTop"
                style="Clear">
                <Title
                    text="Work experience"
                    titleStyle="H4"
                    class="grey-text" />
            </OverflowToolbar>

            <commons:Timeline
                width="100%"
                sortOldestFirst="false"
                enableScroll="false"
                showHeaderBar="false"
                showItemFilter="false"
                showSearch="false"
                showTimeFilter="false"
                content="{/work}">
                <commons:content>
                    <mpn:TimelineItem
                        dateTime="{date}"
                        showDate="{showDate}"
                        userName="{company}"
                        title="{title}"
                        userNameClickable="false"
                        text="{description}"
                        userPicture="{logo}"
                        icon="sap-icon://overlay" />
                </commons:content>
            </commons:Timeline>

            <OverflowToolbar
                width="100%"
                height="auto"
                style="Clear">
                <Title
                    text="Education"
                    titleStyle="H4"
                    class="grey-text" />
            </OverflowToolbar>

            <commons:Timeline
                width="100%"
                sortOldestFirst="false"
                enableScroll="false"
                showHeaderBar="false"
                showItemFilter="false"
                showSearch="false"
                showTimeFilter="false"
                content="{/education}">
                <commons:content>
                    <mpn:TimelineItem
                        showDate="{showDate}"
                        userName="{company}"
                        title="{title}"
                        userNameClickable="false"
                        text="{description}"
                        userPicture="{logo}"
                        icon="sap-icon://overlay" />
                </commons:content>
            </commons:Timeline>
        </layout:VerticalLayout>
    </Page>
</mvc:View>